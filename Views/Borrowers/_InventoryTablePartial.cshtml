@model List<Asset_Management_System.Models.InventoryDTO>
@{
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
}
<table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-200 text-gray-700 text-left text-sm font-semibold">
        <tr>
            <th class="py-2 px-4">Hardware Type</th>
            <th class="py-2 px-4">Available</th>
            <th class="py-2 px-4">Not Functional</th>
            <th class="py-2 px-4">Borrowed</th>
            <th class="py-2 px-4">Deployed</th>
            <th class="py-2 px-4">Total Quantity</th>
        </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-100">
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr class="hover:bg-gray-50 text-sm text-gray-800">
                    <td class="py-2 px-4">@item.HardType</td>
                    <td class="py-2 px-4">@item.AvailableQuantity</td>
                    <td class="py-2 px-4">@item.NonFunctionalQuantity</td>
                    <td class="py-2 px-4">@item.BorrowedQuantity</td>
                    <td class="py-2 px-4">@item.DeployedQuantity</td>
                    <td class="py-2 px-4">@item.TotalQuantity</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center py-4 text-gray-500">No hardware inventory data available.</td>
            </tr>
        }
    </tbody>
</table>