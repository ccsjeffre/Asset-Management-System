@model Asset_Management_System.Models.BorrowerDTO

@{
    var today = DateTime.Today.ToString("yyyy-MM-dd");
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
}
@using Microsoft.AspNetCore.Http
<main class="main-content" id="main-content">
    <h1 class="text-center text-4xl font-bold text-gray-800 mb-6">Request Hardware</h1>

    <section class="bg-gradient p-6 rounded-lg mb-8 ring-1 ring-inset ring-gray-300">

        <div class="row">
            <div class="col-md-8 mx-auto p-3">

                <form asp-action="RequestHardware" method="post">
                    @*Borrower's Name*@
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Borrower's Name</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="BorrowersName" />
                            <span asp-validation-for="BorrowersName" class="text-danger"></span>
                        </div>
                    </div>
                    @*Department*@
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Department</label>
                        <div class="col-sm-8">
                            <select class="form-select" asp-for="Department">
                                <option value="">Select Department</option>
                                <option value="CCS">CCS</option>
                                <option value="CASP">CASP</option>
                                <option value="CBM">CBM</option>
                                <option value="NURSING">NURSING</option>
                            </select>
                            <span asp-validation-for="Department" class="text-danger"></span>
                        </div>
                    </div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @* Hardware Selection *@
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Hardware Type</label>
                        <div class="col-sm-8">
                            <select class="form-select" asp-for="HardId" asp-items="ViewBag.HardwareTypes">
                                <option value="">Select Hardware Type</option>
                            </select>
                            <span asp-validation-for="HardId" class="text-danger"></span>
                        </div>
                    </div>

                    @*Sticker Number*@
                    @* <div class="row mb-3">
                                <label class="col-sm-4 col-form-label">Sticker Number</label>
                                <div class="col-sm-8">
                                    <select class="form-select" asp-for="HardId" asp-items="ViewBag.StickerNumbers">
                                        <option value="">Select Sticker Number</option>
                                    </select>
                                    <span asp-validation-for="HardId" class="text-danger"></span>
                                </div>
                            </div> *@


                    @*Request Purpose*@
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Request Purpose</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="BorrowPurpose" />
                            <span asp-validation-for="BorrowPurpose" class="text-danger"></span>
                        </div>
                    </div>

                    @*Return Date*@
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Expected Return Date</label>
                        <div class="col-sm-8">
                            <input type="date" class="form-control" asp-for="ReturnOn" min="@today" id="dateAcquisitionInput" />
                            <span asp-validation-for="ReturnOn" class="text-danger"></span>
                            <span id="dateAcquisitionError" class="text-danger"></span>
                        </div>
                    </div>
                    @*Released By*@
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Released By</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="ReleasedBy" />
                            <span asp-validation-for="ReleasedBy" class="text-danger"></span>
                        </div>
                    </div>
                    @*Received By*@
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Received By</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="ReceivedBy" />
                            <span asp-validation-for="ReceivedBy" class="text-danger"></span>
                        </div>
                    </div>
                    @*Buttons*@
                    <div class="row">
                        <div class="offset-sm-4 col-sm-4 d-grid">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                        <div class="col-sm-4 d-grid">
                            <a class="btn btn-outline-primary" asp-controller="Borrowers" asp-action="MyRequests" role="button">Cancel</a>
                        </div>
                    </div>
                    
                </form>
            </div>
        </div>
    </section>
</main>