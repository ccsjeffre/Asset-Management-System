@model List<Asset_Management_System.Models.InventoryDTO>
@{
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
}
@using Microsoft.AspNetCore.Http
<main class="main-content" id="main-content">
    <h2 class="text-center text-3xl font-bold text-gray-800 mb-6">Inventory Status</h2>
    <section class="bg-gradient p-6 rounded-lg mb-8 ring-1 ring-inset ring-gray-300">
        <div class="table-responsive" id="inventory-container">
            <div class="text-gray-500">Loading Inventory...</div>
        </div>
        <script>
            async function loadInventory() {
                const res = await fetch('/Borrowers/GetInventoryStatusPartial');
                const html = await res.text();
                document.getElementById("inventory-container").innerHTML = html;
            }

            window.addEventListener('DOMContentLoaded', loadInventory);

            setInterval(loadInventory, 5000);
        </script>
    </section>   
</main>