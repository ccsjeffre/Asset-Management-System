@model List<Asset_Management_System.Models.Borrower>

@{
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
}

<main class="main-content" id="main-content">
    <h2 class="text-center text-3xl font-bold text-gray-800 mb-6 border-b pb-2">Borrowers Requests List</h2>

    <section class="bg-gradient p-6 rounded-lg mb-8 ring-1 ring-inset ring-gray-300">
        <div class="overflow-x-auto rounded-lg shadow">
            <table class="min-w-full text-sm border border-gray-200">
                <thead class="bg-gray-200 text-gray-700 text-left uppercase tracking-wide">
                    <tr>
                        <th class="p-3 border">ID</th>
                        <th class="p-3 border">Name</th>
                        <th class="p-3 border">Department</th>
                        <th class="p-3 border">Hardware Type(s)</th>
                        <th class="p-3 border">Sticker Number(s)</th>
                        <th class="p-3 border">Purpose</th>
                        <th class="p-3 border">Status</th>
                        <th class="p-3 border">Requested On</th>
                        <th class="p-3 border">Expected Return</th>
                        <th class="p-3 border">Approved By</th>
                        <th class="p-3 border">Released By</th>
                        <th class="p-3 border">Received By</th>
                        <th class="p-3 border">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-gray-50 border-b">
                            <td class="p-2 border">@item.BorrowersId</td>
                            <td class="p-2 border">@item.BorrowersName</td>
                            <td class="p-2 border">@item.Department</td>
                            <td class="p-2 border">
                                @(string.Join(", ", item.BorrowedHardwares?.Select(h => h.Hardware?.HardType) ?? new List<string>()))
                            </td>
                            <td class="p-2 border">
                                @(string.Join(", ", item.BorrowedHardwares?.Select(h => h.Hardware?.HardStickerNum) ?? new List<string>()))
                            </td>
                            <td class="p-2 border">@item.BorrowPurpose</td>
                            <td class="p-2 border">
                                <span class="px-2 py-1 rounded-full text-xs font-semibold
                                    @(item.BorrowStatus == "Pending" ? "bg-yellow-100 text-yellow-800" :
                                      item.BorrowStatus == "Approved" ? "bg-green-100 text-green-800" :
                                      item.BorrowStatus == "Rejected" ? "bg-red-100 text-red-800" :
                                      "bg-blue-100 text-blue-800")">
                                    @item.BorrowStatus
                                </span>
                            </td>
                            <td class="p-2 border">@item.BorrowedOn.ToString("MM/dd/yyyy")</td>
                            <td class="p-2 border">@item.ReturnOn?.ToString("MM/dd/yyyy")</td>
                            <td class="p-2 border">@item.ApprovedBy</td>
                            <td class="p-2 border">@item.ReleasedBy</td>
                            <td class="p-2 border">@item.ReceivedBy</td>
                            <td class="p-2 border">
                                @if (item.BorrowStatus == "Pending")
                                {
                                    <form asp-action="CancelRequest" asp-route-id="@item.BorrowersId" method="post" onsubmit="return confirm('Cancel this request?');">
                                        @Html.AntiForgeryToken()
                                        <button class="btn btn-sm btn-outline-danger">Cancel</button>
                                    </form>
                                }
                                else if (item.BorrowStatus == "Approved")
                                {
                                    <span class="text-success"><i class="fas fa-check-circle"></i> Approved</span>
                                }
                                else if (item.BorrowStatus == "Returned")
                                {
                                    <span class="text-info"><i class="fas fa-undo"></i> Returned</span>
                                }
                                else if (item.BorrowStatus == "Rejected")
                                {
                                    <span class="text-danger"><i class="fas fa-times-circle"></i> Rejected</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
</main>
