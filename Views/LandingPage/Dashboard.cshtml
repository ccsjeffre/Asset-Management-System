@{
    ViewData["Title"] = "Dashboard";
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
}

<div class="container-fluid">
    <h1 class="mb-4">EXAMPLE DASHBOARD RANI HAHAHAHAHAHAHA</h1>
    <div class="row g-4">
        <div class="col-md-3">
            <div class="card shadow border-0 text-bg-primary hover-zoom">
                <div class="card-body d-flex flex-column align-items-start">
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-people-fill me-2 fs-3"></i>
                        <h5 class="card-title mb-0">Total Users</h5>
                    </div>
                    <p class="display-6 fw-bold">@ViewBag.TotalUsers</p>
                    <span class="badge bg-light text-primary mt-auto">All registered users</span>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow border-0 text-bg-success hover-zoom">
                <div class="card-body d-flex flex-column align-items-start">
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-person-check-fill me-2 fs-3"></i>
                        <h5 class="card-title mb-0">Active Sessions</h5>
                    </div>
                    <p class="display-6 fw-bold">@ViewBag.ActiveSessions</p>
                    <span class="badge bg-light text-success mt-auto">Currently online</span>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow border-0 text-bg-warning hover-zoom">
                <div class="card-body d-flex flex-column align-items-start">
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-currency-dollar me-2 fs-3"></i>
                        <h5 class="card-title mb-0">Total Sales</h5>
                    </div>
                    <p class="display-6 fw-bold">$@ViewBag.TotalSales</p>
                    <span class="badge bg-light text-warning mt-auto">Sales revenue</span>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow border-0 text-bg-danger hover-zoom">
                <div class="card-body d-flex flex-column align-items-start">
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-cart-check-fill me-2 fs-3"></i>
                        <h5 class="card-title mb-0">Orders Today</h5>
                    </div>
                    <p class="display-6 fw-bold">@ViewBag.OrdersToday</p>
                    <span class="badge bg-light text-danger mt-auto">Daily orders</span>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-zoom {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
    }

        .hover-zoom:hover {
            transform: scale(1.05);
            box-shadow: 0 0 20px rgba(0,0,0,0.3);
        }
</style>
