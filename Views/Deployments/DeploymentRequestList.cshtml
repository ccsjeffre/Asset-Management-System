@model List<Deployment>
@{
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
}
@using Microsoft.AspNetCore.Http
<main class="main-content" id="main-content">
    <h2 class="text-center text-3xl font-bold text-gray-800 mb-6 border-b pb-2">Deployment Request List</h2>
    <section class="bg-gradient p-6 rounded-lg mb-8 ring-1 ring-inset ring-gray-300">
        <div class="overflow-x-auto rounded-lg shadow">
            <table class="min-w-full text-sm border border-gray-200">
                <thead class="bg-gray-200 text-gray-700 text-left uppercase tracking-wide">
                    <tr>
                        <th class="p-3 border">ID</th>
                        <th class="p-3 border">Name</th>
                        <th class="p-3 border">Deployed Hardware</th>
                        <th class="p-3 border">Area</th>
                        <th class="p-3 border">Date</th>
                        <th class="p-3 border">Purpose</th>
                        <th class="p-3 border">Status</th>
                        <th class="p-3 border">Approved By</th>
                        <th class="p-3 border">Released By</th>
                        <th class="p-3 border">Received By</th>
                        <th class="p-3 border">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var deployhardware in Model)
                    {
                        <tr class="hover:bg-gray-50 border-b">
                            <td class="p-2 border">@deployhardware.DeployId</td>
                            <td class="p-2 border">@deployhardware.DeployRequestorName</td>
                            <td class="p-2 border">@deployhardware.Hardware?.HardType</td>
                            <td class="p-2 border">@deployhardware.DeployArea</td>
                            <td class="p-2 border">@deployhardware.DeployDate</td>
                            <td class="p-2 border">@deployhardware.DeployPurpose </td>  
                            <td class="p-2 border">
                                <span class="px-2 py-1 rounded-full text-xs font-semibold
                                        @(deployhardware.DeployStatus == "Pending" ? "bg-yellow-100 text-yellow-800" :
                                                                            deployhardware.DeployStatus == "Approved" ? "bg-green-100 text-green-800" :
                                                                            deployhardware.DeployStatus == "Rejected" ? "bg-red-100 text-red-800" :
                                                                            "bg-blue-100 text-blue-800")">
                                    @deployhardware.DeployStatus
                                </span>
                            </td>
                            <td class="p-2 border">@deployhardware.ApprovedBy</td>
                            <td class="p-2 border">
                                @if (deployhardware.DeployStatus == "Approved")
                                {
                                    <div id="released_display_@deployhardware.DeployId" class="flex items-center">
                                        <span>@deployhardware.ReleasedBy</span>
                                        <button type="button" onclick="toggleField('released', @deployhardware.DeployId)" class="ml-2 text-blue-500 text-xs hover:text-blue-700">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                    </div>
                                    <form asp-action="UpdateReleasedBy"
                                          asp-controller="Deployments"
                                          asp-route-id="@deployhardware.DeployId"
                                          method="post"
                                          class="hidden mt-1"
                                          id="released_form_@deployhardware.DeployId">
                                        @Html.AntiForgeryToken()
                                        <input type="text" name="ReleasedBy" value="@deployhardware.ReleasedBy"
                                               class="border rounded px-2 py-1 text-sm w-full" />
                                        <div class="mt-1 flex gap-2">
                                            <button type="submit" class="bg-blue-500 text-white text-xs px-2 py-1 rounded hover:bg-blue-600">Save</button>
                                            <button type="button" onclick="cancelField('released', @deployhardware.DeployId)" class="text-xs text-gray-600 hover:text-gray-800">Cancel</button>
                                        </div>
                                    </form>
                                }
                                else
                                {
                                    @deployhardware.ReleasedBy
                                }
                            </td>
                            <td class="p-2 border">
                                @if (deployhardware.DeployStatus == "Approved")
                                {
                                    <div id="received_display_@deployhardware.DeployId" class="flex items-center">
                                        <span>@deployhardware.ReceivedBy</span>
                                        <button type="button" onclick="toggleField('received', @deployhardware.DeployId)" class="ml-2 text-blue-500 text-xs hover:text-blue-700">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                    </div>
                                    <form asp-action="UpdateReceivedBy"
                                          asp-controller="Deployments"
                                          asp-route-id="@deployhardware.DeployId"
                                          method="post"
                                          class="hidden mt-1"
                                          id="received_form_@deployhardware.DeployId">
                                        @Html.AntiForgeryToken()
                                        <input type="text" name="ReceivedBy" value="@deployhardware.ReceivedBy"
                                               class="border rounded px-2 py-1 text-sm w-full" />
                                        <div class="mt-1 flex gap-2">
                                            <button type="submit" class="bg-blue-500 text-white text-xs px-2 py-1 rounded hover:bg-blue-600">Save</button>
                                            <button type="button" onclick="cancelField('received', @deployhardware.DeployId)" class="text-xs text-gray-600 hover:text-gray-800">Cancel</button>
                                        </div>
                                    </form>
                                }
                                else
                                {
                                    @deployhardware.ReceivedBy
                                }
                            </td>
                            <td class="p-2 border whitespace-nowrap">
                                @if (deployhardware.DeployStatus == "Approved")
                                {
                                    <span class="inline-flex items-center text-green-600 font-semibold">
                                        <i class="fas fa-check-circle mr-1"></i> Approved
                                    </span>
                                }
                                else if (deployhardware.DeployStatus == "Rejected")
                                {
                                    <span class="inline-flex items-center text-red-600 font-semibold">
                                        <i class="fas fa-times-circle mr-1"></i> Rejected
                                    </span>
                                }
                                else
                                {
                                    <form asp-action="CancelRequest" asp-controller="Deployments"
                                          asp-route-id="@deployhardware.DeployId" method="post"
                                          class="inline" onsubmit="return confirm('Are you sure you want to cancel this request?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="bg-gray-500 text-white text-xs px-2 py-1 rounded hover:bg-gray-600">
                                            Cancel
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
</main>

<script>
    function toggleField(field, id) {
        document.getElementById(`${field}_display_${id}`).style.display = 'none';
        document.getElementById(`${field}_form_${id}`).classList.remove('hidden');
    }

    function cancelField(field, id) {
        document.getElementById(`${field}_form_${id}`).classList.add('hidden');
        document.getElementById(`${field}_display_${id}`).style.display = 'flex';
    }
</script>
