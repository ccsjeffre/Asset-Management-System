@model Asset_Management_System.Models.DeploymentDTO

@{
    var today = DateTime.Today.ToString("yyyy-MM-dd");
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
}

<main class="main-content" id="main-content">
    <h1 class="text-center text-4xl font-bold text-gray-800 mb-6">Request Deployment</h1>

    <section class="bg-gradient p-6 rounded-lg mb-8 ring-1 ring-inset ring-gray-300">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">@TempData["SuccessMessage"]</div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger" role="alert">@TempData["ErrorMessage"]</div>
        }
        @if (TempData["WarningMessage"] != null)
        {
            <div class="alert alert-warning" role="alert">@TempData["WarningMessage"]</div>
        }

        <div class="row">
            <div class="col-md-8 mx-auto p-3">
                <form asp-action="RequestDeployment" asp-controller="Deployments" method="post">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                    <!-- Hardware -->
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Hardware Type</label>
                        <div class="col-sm-8">
                            <select asp-for="HardId" asp-items="ViewBag.HardwareTypes" class="form-select">
                                <option value="">Select Hardware</option>
                            </select>
                            <span asp-validation-for="HardId" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Requestor Name -->
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Requestor's Name</label>
                        <div class="col-sm-8">
                            <input asp-for="DeployRequestorName" class="form-control" />
                            <span asp-validation-for="DeployRequestorName" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Deployment Area -->
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Deployment Area</label>
                        <div class="col-sm-8">
                            <input asp-for="DeployArea" class="form-control" />
                            <span asp-validation-for="DeployArea" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Deployment Date -->
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Deployment Date</label>
                        <div class="col-sm-8">
                            <input type="date" asp-for="DeployDate" class="form-control" />
                            <span asp-validation-for="DeployDate" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Purpose -->
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Purpose</label>
                        <div class="col-sm-8">
                            <input asp-for="DeployPurpose" class="form-control" />
                            <span asp-validation-for="DeployPurpose" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Released By -->
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Released By</label>
                        <div class="col-sm-8">
                            <input asp-for="ReleasedBy" class="form-control" />
                            <span asp-validation-for="ReleasedBy" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Received By -->
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Received By</label>
                        <div class="col-sm-8">
                            <input asp-for="ReceivedBy" class="form-control" />
                            <span asp-validation-for="ReceivedBy" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div class="row">
                        <div class="offset-sm-4 col-sm-4 d-grid">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                        <div class="col-sm-4 d-grid">
                            <a asp-action="DeploymentRequestList" asp-controller="Deployments" class="btn btn-outline-secondary ml-2">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</main>
