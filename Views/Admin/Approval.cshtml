@model List<Asset_Management_System.Models.Borrower>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
}
@using Microsoft.AspNetCore.Http
<div class="flex">
    <main class="main-content align-items-center" id="main-content">
        <h2 class="text-center text-3xl font-bold text-gray-800 mb-6">Borrowing Approval</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-4">
                @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4">
                @TempData["ErrorMessage"]
            </div>
        }
        @if (TempData["WarningMessage"] != null)
        {
            <div class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700 p-4 mb-4">
                @TempData["WarningMessage"]
            </div>
        }

        <div class="table-responsive">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-200 text-gray-700 text-left text-sm font-semibold">
                    <tr>
                        <th class="py-2 px-4">ID</th>
                        <th class="py-2 px-4">Name</th>
                        <th class="py-2 px-4">Department</th>
                        <th class="py-2 px-4">Type</th>
                        <th class="py-2 px-4">Sticker Number</th>
                        <th class="py-2 px-4">Purpose</th>
                        <th class="py-2 px-4">Status</th>
                        <th class="py-2 px-4">Requested On</th>
                        <th class="py-2 px-4">Expect Return</th>
                        <th class="py-2 px-4">Approved By</th>
                        <th class="py-2 px-4">Released By</th>
                        <th class="py-2 px-4">Received By</th>
                        <th class="py-2 px-4">Action</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-100 text-sm text-gray-800">
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var hard in Model)
                        {
                            <tr class="hover:bg-gray-50">
                                <td class="py-2 px-4">@hard.BorrowersId</td>
                                <td class="py-2 px-4">@hard.BorrowersName</td>
                                <td class="py-2 px-4">@hard.Department</td>
                                <td class="py-2 px-4">@hard.Hardware?.HardType</td>
                                <td class="py-2 px-4">@hard.Hardware?.HardStickerNum</td>
                                <td class="py-2 px-4">@hard.BorrowPurpose</td>
                                <td class="py-2 px-4">
                                    <span class="px-2 py-1 rounded-full text-xs font-semibold
                                    @(hard.BorrowStatus == "Pending" ? "bg-yellow-100 text-yellow-800" :
                                      hard.BorrowStatus == "Approved" ? "bg-green-100 text-green-800" :
                                      hard.BorrowStatus == "Rejected" ? "bg-red-100 text-red-800" :
                                      "bg-blue-100 text-blue-800")">
                                        @hard.BorrowStatus
                                    </span>
                                </td>
                                <td class="py-2 px-4">@hard.BorrowedOn.ToString("MM/dd/yyyy")</td>
                                <td class="py-2 px-4">@hard.ReturnOn?.ToString("MM/dd/yyyy")</td>
                                <td class="py-2 px-4">@hard.ApprovedBy</td>
                                <td class="py-2 px-4">@hard.ReleasedBy</td>
                                <td class="py-2 px-4">@hard.ReceivedBy</td>
                                <td class="py-2 px-4 whitespace-nowrap">
                                    @if (hard.BorrowStatus == "Pending")
                                    {
                                        <form asp-action="ApproveRequest" asp-controller="Admin" asp-route-id="@hard.BorrowersId" method="post"
                                              class="inline-block" onsubmit="return confirm('Are you sure you want to approve this request?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="bg-green-500 text-white px-3 py-1 rounded text-sm hover:bg-green-600">
                                                Approve
                                            </button>
                                        </form>
                                        <form asp-action="RejectRequest" asp-controller="Admin" asp-route-id="@hard.BorrowersId" method="post"
                                              class="inline-block ml-1" onsubmit="return confirm('Are you sure you want to reject this request?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="bg-red-500 text-white px-3 py-1 rounded text-sm hover:bg-red-600">
                                                Reject
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <span class="inline-flex items-center text-green-600 font-semibold">
                                            <i class="fas fa-check-circle mr-1"></i> Actioned
                                        </span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="13" class="text-center py-4 text-gray-500">No pending requests available.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </main>
</div>

